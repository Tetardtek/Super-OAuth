# === CORE CONFIGURATION ===
NODE_ENV=development
APP_NAME=SuperOAuth
APP_VERSION=1.0.0
PORT=3000
API_VERSION=v1
API_BASE_PATH=/api/v1

# === DATABASE CONFIGURATION ===
# Primary Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=superoauth
MYSQL_USERNAME=superoauth_user
MYSQL_PASSWORD=your-secure-mysql-password
MYSQL_ROOT_PASSWORD=your-root-password

# Test Database
MYSQL_TEST_DATABASE=superoauth_test

# Connection Pool
MYSQL_CONNECTION_LIMIT=20
MYSQL_ACQUIRE_TIMEOUT=60000
MYSQL_TIMEOUT=60000

# SSL Configuration (Production)
MYSQL_SSL_ENABLED=false
MYSQL_SSL_CA_PATH=/path/to/ca-cert.pem
MYSQL_SSL_CERT_PATH=/path/to/client-cert.pem
MYSQL_SSL_KEY_PATH=/path/to/client-key.pem

# Cache & Sessions
REDIS_URI=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2

# === SECURITY CONFIGURATION ===
# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-64-chars-minimum
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-64-chars-minimum
JWT_ACCESS_TOKEN_EXPIRE=5m
JWT_REFRESH_TOKEN_EXPIRE=7d
JWT_ISSUER=superoauth
JWT_AUDIENCE=superoauth-api

# Encryption
ENCRYPTION_KEY=your-32-char-encryption-key-exactly
ENCRYPTION_ALGORITHM=aes-256-gcm
PASSWORD_HASH_ROUNDS=12

# === EMAIL CONFIGURATION ===
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_NAME=SuperOAuth
EMAIL_FROM_ADDRESS=noreply@superoauth.com

# Email Templates
EMAIL_TEMPLATE_PATH=./templates/emails
EMAIL_VERIFICATION_EXPIRE=24h
PASSWORD_RESET_EXPIRE=1h

# === OAUTH PROVIDERS ===
# Discord
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:3000/api/v1/auth/provider/discord/callback
DISCORD_SCOPES=identify,email

# Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/provider/google/callback
GOOGLE_SCOPES=openid,profile,email

# GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/v1/auth/provider/github/callback
GITHUB_SCOPES=user:email

# === FRONTEND CONFIGURATION ===
FRONTEND_URL=http://localhost:3001
FRONTEND_LOGIN_SUCCESS_URL=http://localhost:3001/auth/success
FRONTEND_LOGIN_ERROR_URL=http://localhost:3001/auth/error
FRONTEND_EMAIL_VERIFICATION_URL=http://localhost:3001/verify-email
FRONTEND_PASSWORD_RESET_URL=http://localhost:3001/reset-password

# === SECURITY FEATURES ===
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_REGISTER_MAX=3

# Session Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict
SESSION_MAX_AGE=86400000  # 24 hours

# === MONITORING & OBSERVABILITY ===
# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/superoauth.log
LOG_MAX_SIZE=10mb
LOG_MAX_FILES=5

# Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# === DEVELOPMENT TOOLS ===
# Hot Reload
HOT_RELOAD_ENABLED=true
HOT_RELOAD_PORT=3002

# Debug
DEBUG_ENABLED=false
DEBUG_NAMESPACES=superoauth:*

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs
