{
  "name": "superoauth",
  "version": "1.0.0",
  "description": "Enterprise OAuth Authentication API",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:optimize": "npm run build && node scripts/optimize-bundles.js",
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:frontend": "vitest run",
    "test:frontend:watch": "vitest",
    "test:frontend:ui": "vitest --ui",
    "test:frontend:coverage": "vitest run --coverage",
    "test:all": "npm run test && npm run test:frontend",
    "test:all:coverage": "npm run test:coverage && npm run test:frontend:coverage",
    "docs:tests": "echo 'Opening tests documentation...' && start TESTS_DOCUMENTATION.md",
    "docs:coverage": "npm run test:frontend:coverage && start coverage/index.html",
    "report:tests": "node scripts/generate-test-report.js",
    "optimize": "node scripts/optimize-bundles.js",
    "optimize:analyze": "npm run optimize && node scripts/analyze-bundle-size.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate",
    "migration:run": "typeorm-ts-node-commonjs migration:run",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert",
    "db:reset": "node scripts/reset-database.js",
    "db:reset-force": "node scripts/reset-database.js --confirm"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^6.9.3",
    "redis": "^4.6.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.8",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "clean-css": "^5.3.3",
    "eslint": "^8.45.0",
    "happy-dom": "^18.0.1",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.7",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
